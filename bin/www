#!/usr/bin/env node

/**
 * Module dependencies.
 */

var url = require('url');
var app = require('../app');
var debug = require('debug')('webhook-to-gitter:server');
var http = require('http');

app.set('expiry', process.env.EXPIRY || 1000*60*60*24*7);
app.set('prefix', process.env.PREFIX || "webhook-to-gitter_");

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);
server.on('listening', initDatabase);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}

function initDatabase() {
  var u = url.parse(process.env.REDISTOGO_URL || 'redis://localhost:6379/0')
  var opts = {};
  if (u.auth) {
    opts.auth_pass = u.auth.split(':')[1];
  }

  redis = require('redis').createClient(u.port, u.hostname, opts);
  app.set('redis', redis);
  redis.on('error', onError);
  redis.on('ready', function() {
    debug('Redis ready');
  });
}
